<li id="post-<%= post.id %>">
  <%= link_to(post.user class: "profile_pic") do %>
     <%= image_tag("http://placehold.it/40x40", class: "img-responsive profile_pic")%>
  <% end %>

  <span class="user"><%= link_to post.user.name, post.user %></span>
  <span class="post-supports"> <%= time_ago_in_words(post.created_at) %> ago | <%= pluralize(post.comments.count, 'Comment')%>  </span>
   
   <span class="content"><p> <%= post.content %></p></span>

   
   <%= form_tag ('/comments') do %>
     <%= hidden_field_tag :post_id, post.id %>
     <%= text_area :comment, :content, class: "form-control", placeholder: "Add a comment" %>
     <%= submit_tag 'Post' %>
   <% end %>

   <% if post.comments.any? %>
     <% post.comments.each do |comment|%>
       <div> <%= comment.content %> <div>
     <% end %>
   <% end %>
</li>
